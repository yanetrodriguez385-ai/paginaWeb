    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const tabs = document.querySelectorAll('.nav-tab');
            const contentSections = document.querySelectorAll('.content-section');

            tabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    tabs.forEach(t => t.classList.remove('active'));
                    tab.classList.add('active');

                    const target = tab.getAttribute('data-tab');
                    contentSections.forEach(section => {
                        if (section.id === target) {
                            section.classList.add('active');
                        } else {
                            section.classList.remove('active');
                        }
                    });
                });
            });

            const tooltipTitleCallback = (tooltipItems) => {
                let label = tooltipItems[0].label;
                if (Array.isArray(label)) {
                    return label.join(' ');
                }
                return label;
            };

            const chartPlugins = {
                legend: {
                    display: false
                },
                tooltip: {
                    callbacks: {
                        title: tooltipTitleCallback
                    }
                }
            };

            new Chart(document.getElementById('sueñoChart'), {
                type: 'doughnut',
                data: {
                    labels: ['Horas de Sueño', 'Horas Restantes'],
                    datasets: [{
                        data: [8, 16],
                        backgroundColor: ['#5F9EA0', '#EAEAEA'],
                        borderColor: '#FAF8F5',
                        borderWidth: 4,
                        hoverOffset: 4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    cutout: '70%',
                    plugins: chartPlugins
                }
            });

            new Chart(document.getElementById('ejercicioChart'), {
                type: 'doughnut',
                data: {
                    labels: ['Minutos de Ejercicio', 'Minutos Restantes'],
                    datasets: [{
                        data: [30, 30],
                        backgroundColor: ['#88BDBF', '#EAEAEA'],
                        borderColor: '#FAF8F5',
                        borderWidth: 4,
                        hoverOffset: 4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    cutout: '70%',
                    plugins: chartPlugins
                }
            });

             new Chart(document.getElementById('nutricionChart'), {
                type: 'pie',
                data: {
                    labels: ['Frutas & Verduras', 'Proteínas', 'Carbohidratos'],
                    datasets: [{
                        data: [50, 25, 25],
                        backgroundColor: ['#5F9EA0', '#88BDBF', '#E1C699'],
                        borderColor: '#FAF8F5',
                        borderWidth: 4,
                        hoverOffset: 4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { position: 'bottom', labels: { boxWidth: 15, padding: 15 } },
                        tooltip: chartPlugins.tooltip
                    }
                }
            });
            
            new Chart(document.getElementById('estresChart'), {
                type: 'bar',
                data: {
                    labels: ['Mindfulness', 'Establecer Límites', 'Desintoxicación Digital', 'Ejercicio Físico'],
                    datasets: [{
                        label: 'Efectividad en Reducción de Estrés',
                        data: [85, 80, 60, 75],
                        backgroundColor: ['#5F9EA0', '#88BDBF', '#A1CACA', '#E1C699'],
                        borderRadius: 5,
                        barThickness: 30
                    }]
                },
                options: {
                    indexAxis: 'y',
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: { x: { beginAtZero: true, max: 100 } },
                    plugins: chartPlugins
                }
            });

            new Chart(document.getElementById('propositoChart'), {
                type: 'bar',
                data: {
                    labels: ['Reduce Ansiedad', 'Aumenta Creatividad', 'Mejora el Ánimo', 'Da Satisfacción'],
                    datasets: [{
                        label: 'Impacto Positivo de los Hobbies (%)',
                        data: [75, 60, 85, 90],
                        backgroundColor: ['#5F9EA0', '#88BDBF', '#A1CACA', '#E1C699'],
                        borderRadius: 5,
                        barThickness: 40
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: { y: { beginAtZero: true, max: 100 } },
                    plugins: chartPlugins
                }
            });
        });
    </script>
